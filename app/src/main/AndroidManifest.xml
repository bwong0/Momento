<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.momento">
    <!-- Internet permission and network access permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Momento.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".admin.admin.barChartDisplay"
            android:exported="false" />
        <activity
            android:name=".admin.admin.barChartRedirect"
            android:exported="false" />
        <activity
            android:name=".admin.admin.patientProfile"
            android:exported="false" />
        <activity
            android:name=".ui.login.patientRegister"
            android:exported="false" />
        <activity
            android:name=".admin.admin.familyCreation"
            android:exported="false" />
        <activity
            android:name=".admin.admin.patientCreation"
            android:exported="false" />
        <activity
            android:name=".ui.login.familyRegister"
            android:exported="false" />
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.adminRegister"
            android:exported="false" />
        <activity
            android:name=".family.ProfileCreation"
            android:exported="false" />
        <activity
            android:name=".patient.profiles"
            android:exported="false" />
        <activity
            android:name=".ui.login.Home"
            android:exported="false" />
        <activity
            android:name=".ui.login.adminHome"
            android:exported="false" />
        <activity
            android:name=".family.familyHome"
            android:exported="false" />
        <activity
            android:name=".patient.patientHome"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="Login" />
        <activity
            android:name=".ui.login.LauncherActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mediaPlayer.mediaPlayerActivity"
            android:exported="true"
            android:label="mediaPlayer">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>