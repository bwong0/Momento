        android:text="@string/create_new_patient"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientAdmin4"
        app:layout_constraintStart_toStartOf="@+id/patientAdmin4"
        app:layout_constraintTop_toBottomOf="@+id/patientAdmin4" />

    <TextView
        android:id="@+id/patientNameAdmin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_patient"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientAdmin5"
        app:layout_constraintStart_toStartOf="@+id/patientAdmin5"
        app:layout_constraintTop_toBottomOf="@+id/patientAdmin5" />

    <TextView
        android:id="@+id/patientNameAdmin6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_patient"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientAdmin6"
        app:layout_constraintStart_toStartOf="@+id/patientAdmin6"
        app:layout_constraintTop_toBottomOf="@+id/patientAdmin6" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:text="@string/Logout"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

