<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.admin.patientProfile">
    <ImageView
        android:id="@+id/profileCreationImage"
        android:layout_width="280dp"
        android:layout_height="256dp"
        android:adjustViewBounds="true"
        android:background="@drawable/empty"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <EditText
        android:selectAllOnFocus="true"
        android:id="@+id/ProfileCreationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/profileCreationImage"
        app:layout_constraintEnd_toEndOf="@+id/profileCreationImage"
        app:layout_constraintStart_toStartOf="@+id/profileCreationImage"
        app:layout_constraintTop_toTopOf="parent" />

